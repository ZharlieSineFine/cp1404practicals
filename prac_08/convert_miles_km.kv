BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_mile
            font_size: 48
            on_text: app.handle_convert(input_mile.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_mile.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_mile.text, -1)
#    Button:
#        text: 'Convert miles to km'
#        on_press: app.handle_convert(input_mile.text)
    Label:
        id: output_label
        font_size: 48
        color: (1, 1, 0, 1)